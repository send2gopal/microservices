@model ApplicationUserViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="login-page">

    <partial name="_ValidationSummary" />
    <form asp-route="Register" style="width: 100%;">
        <div class="card" style="width: 100%;">
            <div class="card-header">
                <h2>Register</h2>
            </div>
            <div class="container">
                <div class="row top-buffer">


                    <div class="col-5">


                        <div class="card-body">

                            <input type="hidden" asp-for="ReturnURl" />

                            <div class="form-group">
                                <label>First Name</label>
                                <input class="form-control" placeholder="First Name" asp-for="FirstName" autofocus>
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input class="form-control" placeholder="Last Name" asp-for="LastName" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" placeholder="Email" asp-for="Email" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autocomplete="off">
                            </div>
                             <button class="btn btn-secondary" name="button" value="cancel">Register</button>
                        </div>
                    </div>
                    <div class="col-5">


                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Street"></label>
                                <input class="form-control" placeholder="Street" asp-for="Street" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="City"></label>
                                <input class="form-control" placeholder="City" asp-for="City" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="State"></label>
                                <input class="form-control" placeholder="State" asp-for="State" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="Country"></label>
                                <input class="form-control" placeholder="Country" asp-for="Country" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label>Zip Code</label>
                                <input  class="form-control" placeholder="Zip Code" asp-for="ZipCode" autocomplete="off">
                            </div>
                             
                             <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </form>
</div>

